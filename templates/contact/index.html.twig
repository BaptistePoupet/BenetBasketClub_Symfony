{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    {# affiche un message de confirmation si le formulaire a bien été envoyé#}
    {% if message is defined %}
        <div>{{ message }}</div>
    {% endif %}
    {# cree un formulaire de contact, ou il y a nom, prenom, adresse mail, description#}
    <div>
        <form action="" method="post">
            <style>
                body {
                    font-family: Arial, Helvetica, sans-serif;
                    background-color: EEEEEE;
                }
                label {
                    font-weight: bold;
                }
                input[type="text"],
                textarea {
                    width: 100%;
                    padding: 5px;
                    margin-bottom: 10px;
                }
                button[type="submit"] {
                    background-color: #007bff;
                    color: #fff;
                    border: none;
                    padding: 10px 20px;
                    cursor: pointer;
                }
            </style>
            
            <div>
                <label for="nom">Nom</label>
                <input type="text" id="nom" name="nom">
            </div>
            <div>
                <label for="prenom">Prénom</label>
                <input type="text" id="prenom" name="prenom">
            </div>
            <div>
                <label for="mail">Adresse mail</label>
                <input type="text" id="mail" name="mail">
            </div>
            <div>
                <label for="description">Description</label>
                <textarea id="description" name="description"></textarea>
            </div>
            <form action="{{ path('contacter_envoyer_formulaire') }}" method="post">
                <!-- Les champs du formulaire ici -->
                <div>
                    <button type="submit">Envoyer</button>
                </div>
        </form>
    </div>
{% endblock %}
