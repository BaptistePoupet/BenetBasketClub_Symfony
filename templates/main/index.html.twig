{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    /* Ajustez la hauteur du carrousel en fonction de vos besoins */
    .carousel-item img { width: 100%; height: 400px; object-fit: cover; }
</style>

<div class="example-wrapper">
    <!-- Section de l'image du club -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="{{ asset('image/images_acceuil.jpg') }}" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('image/images_acceuil2.jpg') }}" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('image/images_acceuil4.jpg') }}" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- Section du logo du club avec texte explicatif -->
    <section>
        <div>
            <img src="{{ asset('images/logo-club.png') }}" alt="Logo_du_club">
        </div>
        <div>
            <h3>Le club de basket de Benet</h3>
            <p>Le Benet Baslet Club a été créé en 1993</p>
        </div>
    </section>

    <!-- Section de l'actualité du club -->
    
    <!-- Section des sponsors du club -->
    <section>
        <h2>Nos Sponsors</h2>
        <div>
            <img src="{{ asset('images/sponsor1.png') }}" alt="Sponsor 1">
        </div>
        <div>
            <img src="{{ asset('images/sponsor2.png') }}" alt="Sponsor 2">
        </div>
        <!-- Ajoutez d'autres sponsors ici -->
    </section>
</div>

<!-- Inclure les scripts Bootstrap et jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% endblock %}
